/* pages/main/mine/index.wxss */
.mContainer{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F4F2F2 ;
}
.headContainer{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.nameContainer{
  box-shadow: 0px 0px 2px 1px gray;
  margin-top: 30rpx;
  width: 620rpx;
  height: 190rpx;
  background: white;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}
.divLine{
  margin-top: 20rpx;
  width: 500rpx;
  height: 5rpx;
  background: #14274E;
}
.funcContainer{
  box-shadow: 0px 0px 2px 1px gray;
  margin-top: 50rpx;
  width: 620rpx;
  height: 500rpx;
  background: white;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar{
  margin-top: 70rpx;
  overflow: hidden;
  /* overflow为规定溢出的部分的处理 */
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.nameDetail{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.achievement{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  padding: 5rpx;
  border-radius: 8rpx;
}
.achievement text{
  font-size: 30rpx;
  color: #fff;
}
.nameText{
  font-size:45rpx;
  font-weight: bold;
  font-family: "FangSong";
}
.func_item{
  display:flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  padding: 30rpx;
}
.func_item text{
  font-size: 40rpx;
  color: #8A8A8A;
}
.func_item image{
  margin-left: 40rpx;
  margin-right: 40rpx;
  width: 50rpx;
  height: 50rpx;
}